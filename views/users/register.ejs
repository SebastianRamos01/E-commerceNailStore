<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/stylesRegister.css">
    <%- include('../partials/head.ejs') %>
        <title>Registrate</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
        <main>
            <div class="main">
                <div class="section-box">
                    <div class="register-image">
                        <img src="/images/Logo.jpg" alt="No Responde" class="main-img">
                    </div>
                    <div class="form-box">
                        <form action="/register" method="post" enctype="multipart/form-data" id="register-form">
                            <div class="main-title">Registrate!</div>
                            <div class="titles-box">
                                <label for="name-input">Nombre</label>
                            </div>
                            <div class="input-box">
                                <input type="text" class="input" name="name" id="name-input">
                            </div>
                            <small id="name-error"></small>
                            <div class="titles-box">
                                <label for="email-input">Email</label>
                            </div>
                            <div class="input-box">
                                <input type="email" class="input" name="email" id="email-input">
                            </div>
                            <small id="email-error"></small>
                            <div class="titles-box">
                                <label for="password-input">Contrase√±a</label>
                            </div>
                            <div class="input-box">
                                <input type="password" class="input" name="password" id="password-input">
                            </div>
                            <small id="password-error"></small>
                            <div class="titles-box">
                                <label for="input-date">Fecha de Nacimiento</label>
                            </div>
                            <div class="input-date-box">
                                <input type="date" name="birthdate" id="input-date">
                            </div>
                            <small id="birth-error"></small>
                            <div class="titles-box">
                                <label for="img-input">Foto de Perfil</label>
                            </div>
                            <div class="input-box">
                                <input type="file" class="input" name="img" id="img-input">
                            </div>
                            <small id="img-error"></small>
                            <div class="send-box">
                                <input type="submit" value="Registrar" class="send-botom" id="snd-btn">
                            </div>
                            <div class="login-redirect">
                                Ya tienes una cuenta? Ingresa <a href="/login" class="redirect-word">aqui</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../partials/footer.ejs') %>
        <script src="/scriptsjs/registerValidations.js"></script>
</body>
</html>