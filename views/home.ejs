<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/stylesHome.css" rel="stylesheet">
    <%- include('./partials/head.ejs') %>
        <title>Nail Store</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <main>
            <div class="title">
                Destacados
            </div>
            <section class="product-section">
                <ul class="product-ul">
                    <% for(let i=0; i < 3; i++) { %>
                        <li class="product-box">
                            <a href="/shop/product-detail/<%= allProducts[i].id %>" class="product-image">
                                <img src="/images/<%= allProducts[i].image %>" alt="No responde">
                            </a>
                            <div class="product-description">
                                <div class="product-prize">$<%= allProducts[i].price %></div>
                                <div class="product-title"><%= allProducts[i].name %></div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </section>
            <div class="title">
                Mas productos
            </div>
            <section class="product-section">
                <ul class="product-ul">
                    <% for(let i=3; i < 6; i++) { %>
                        <li class="product-box">
                            <a href="/shop/product-detail/<%= allProducts[i].id %>" class="product-image">
                                <img src="/images/<%= allProducts[i].image %>" alt="No responde">
                            </a>
                            <div class="product-description">
                                <div class="product-prize">$<%= allProducts[i].price %></div>
                                <div class="product-title"><%= allProducts[i].name %></div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </section>
            </div>
        </main>
        <%- include('./partials/footer.ejs') %>
</body>
</html>